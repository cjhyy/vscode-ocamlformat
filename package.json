{
    "name": "vscode-ocamlformat",
    "displayName": "vscode-ocamlformat",
    "description": "an ocamlformat ext for vscode",
    "version": "0.0.2",
    "publisher": "curry",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:ocaml",
        "onCommand:extension.ocamlformat"
    ],
    "main": "./dist/extension",
    "contributes": {
        "capabilities": {
            "documentFormattingProvider": "true"
        },
        "commands": [
            {
                "command": "extension.ocamlformat",
                "title": "ocamlformat"
            }
        ]
    },
    "scripts": {
        "start": "babel src -d dist -w",
        "build": "babel src -d dist",
        "postinstall": "npm run build && node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.3.3",
        "@babel/plugin-proposal-class-properties": "^7.3.3",
        "@babel/plugin-proposal-do-expressions": "^7.2.0",
        "@babel/plugin-proposal-pipeline-operator": "^7.3.2",
        "@babel/plugin-proposal-throw-expressions": "^7.2.0",
        "@babel/preset-env": "^7.3.1",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.14.1",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-prettier": "^3.0.1",
        "prettier": "^1.12.1",
        "vscode": "^1.1.30"
    },
    "dependencies": {
        "ramda": "^0.26.1"
    }
}

{
    "name": "vscode-ocamlformat",
    "displayName": "vscode-ocamlformat",
    "description": "an ocamlformat ext for vscode",
    "version": "0.0.2",
    "publisher": "curry",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:ocaml"
    ],
    "main": "./dist/extension",
    "contributes": {
        "capabilities": {
            "documentFormattingProvider": "true"
        }
    },
    "scripts": {
        "start": "babel src -d dist -w",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0-beta.46",
        "@babel/core": "^7.0.0-beta.46",
        "@babel/plugin-proposal-class-properties": "^7.0.0-beta.46",
        "@babel/plugin-proposal-do-expressions": "^7.0.0-beta.46",
        "@babel/plugin-proposal-pipeline-operator": "^7.0.0-beta.46",
        "@babel/plugin-proposal-throw-expressions": "^7.0.0-beta.46",
        "@babel/preset-env": "^7.0.0-beta.46",
        "@babel/preset-stage-0": "^7.0.0-beta.46",
        "babel-eslint": "^8.2.3",
        "eslint": "^4.19.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-prettier": "^2.6.0",
        "prettier": "^1.12.1",
        "vscode": "^1.1.17"
    },
    "dependencies": {
        "ramda": "^0.25.0"
    }
}
